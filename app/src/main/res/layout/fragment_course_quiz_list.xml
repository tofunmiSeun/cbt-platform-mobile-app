<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context="com.unilorin.vividmotion.pre_cbtapp.fragments.CourseQuizFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:name="com.unilorin.vividmotion.pre_cbtapp.fragments.CourseQuizFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/take_quiz_courses_list_item"/>

    <LinearLayout
        android:id="@+id/noAssignedCourseLayout"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#4a4a4a"
            android:textAlignment="center"
            android:text="You currently do not have any courses."/>

        <Button
            android:id="@+id/addCourseButton"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:text="Add Course"/>
    </LinearLayout>
</RelativeLayout>

